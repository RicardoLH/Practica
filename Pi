#include <iostream>
#include <math.h>
using namespace std;
unsigned long long int n;
unsigned long long int cont;
int main() {
	cin>>n;
	for( int i = 1; i <= n; i++ ){
		cont += floor(sqrt(n*n-i*i));
	}
	double pi = (double) (4*cont) / (double)(n*n);
	cont = 0;
	for( int i = 0; i < n; i++ ){
		cont += n-ceil(sqrt(n*n-i*i) );
	}
	cont = 4*(n*n-cont);
	double pi2 = (double) cont / (double)(n*n);
	printf("%f %f %f", pi, pi2, (pi+pi2)/2);
	return 0;
}
